doctype html
html
	head
		title Diaz-rdv
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')

		link(rel='stylesheet', type='text/css', href='semantic/dist/semantic.min.css')
		link(href='css/style.css', rel='stylesheet')
		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.min.js")
		script(src='semantic/dist/semantic.min.js')
		script(src='js/abonnement.js')
	
	body

		// Navbar Menu
		.navbar.navtwo.ui.top.fixed.menu.transition.secondary.pointing
			.ui.container
				a.item.img(href='index.html#home')
					img(src="img/logo.png")
					.ui.header.logo
						| Diaz-
						span rdv
						
				.right.menu
					a#navicon.closed.btn.toc.item
						svg#ht(viewbox='0 0 15 15')
							rect(x='3', y='5', width='9', height='1')
						svg#hm(viewbox='0 0 15 15')
							rect(x='3', y='7', width='9', height='1')
						svg#hb(viewbox='0 0 15 15')
							rect(x='3', y='9', width='9', height='1')
					a.ui.item.home(href="index.html#home") Accueil
					a.ui.item.one(href="index.html#one") Avantages
					a.ui.item.two(href="index.html#two") Application
					a.ui.item.three.active(href="index.html#three") Abonnements
					a.ui.item.four(href="index.html#four") Contact
					
		// Sidebar Menu
		.navbar.ui.vertical.inverted.sidebar.menu.right
			a.ui.item.home.active(href="index.html#home") Accueil
			a.ui.item.one(href="index.html#one") Avantages
			a.ui.item.two(href="index.html#two") Application
			a.ui.item.three(href="index.html#three") Abonnements
			a.ui.item.four(href="index.html#four") Contact

		// Page Contents
		.pusher

			// Section four
			section#four
				.ui.center.aligned.text.container
					h1.ui.header Formulaire de préinscription

				.ui.center.text.container
					.ui.header.inverted.attached.top
							p Preinscrivez vous et soyez avertit dés le lancement de l'application Diaz-rdv !

					.ui.form.abonnementSubmit.error.segment.attached
						
						.fields

							.field.eight.wide
								label Nom
								input(name="nom" type='text' placeholder="Votre nom")
							.field.eight.wide
								label Société
								input(name="societe" type='text' placeholder="Votre societe")

						.fields
							.field.eight.wide
								label E-mail
								input(name="email" type='email' placeholder="Votre e-mail")

							.field.eight.wide
								label Tel.
								input(name="tel" type='text' placeholder="Votre numéro de téléphone")

						.field
							label Adresse
							input#autocomplete.autoo(placeholder="Votre adresse" name="address" type='text' )


						.field
							label Profession
							.ui.fluid.search.selection.dropdown
								input(name='profession', type='hidden')
								i.dropdown.icon
								.default.text Proffession
								.menu
									.item(data-value='running')
										| Garagiste
									.item(data-value='football')
										| Docteur
									.item(data-value='workout')
										| Coiffeur

						.fields.grouped
							label Votre Abonnement
							.field
								.ui.radio.checkbox
									input(type='radio', name='abonnement')
									label Formule 1
							.field
								.ui.radio.checkbox
									input(type='radio', name='abonnement')
									label Formule 2
							.field
								.ui.radio.checkbox
									input(type='radio', name='abonnement')
									label Formule 3
	
						.field
							.ui.bgdiaz.button.submit.huge
								| Se préinscrire ! 
						.ui.error.message
				

			//	Footer		
			.ui.inverted.vertical.footer.segment
				.ui.container
					.ui.stackable.inverted.divided.equal.height.stackable.grid
						.three.wide.column
							h4.ui.inverted.header Réseau Sociaux
							.ui.inverted.link.list
								a.item(href='http://semantic-ui.com/examples/homepage.html#') 
									|Facebook
								a.item(href='http://semantic-ui.com/examples/homepage.html#') 
									|Twitter
								a.item(href='http://semantic-ui.com/examples/homepage.html#') 
									|Google plus
						.three.wide.column
							h4.ui.inverted.header Services
							.ui.inverted.link.list
								a.item(href='http://semantic-ui.com/examples/homepage.html#') Garagiste
								a.item(href='http://semantic-ui.com/examples/homepage.html#')  Esthéticien
								a.item(href='http://semantic-ui.com/examples/homepage.html#')  Docteur
						
						.seven.wide.column
							h4.ui.inverted.header Address
							p
								| Blabla blabla blabla Blabla blabla blabla Blabla blabla blabla
